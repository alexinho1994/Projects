<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gsa.mobiletest.Game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intrebare"
        android:layout_centerHorizontal="true"
        android:text="intrebare"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raspuns1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/intrebare"
        android:text="raspuns1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raspuns2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/raspuns1"
        android:text="raspuns2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raspuns3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/raspuns2"
        android:text="raspuns3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wikipedia"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/raspuns3"
        android:text="Wikipedia"
        android:layout_marginTop="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wikipedia"
        android:text="next"
        />

</RelativeLayout>
